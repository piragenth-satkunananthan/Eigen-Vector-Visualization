                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <TextField fx:id="a" alignment="CENTER" promptText="a" text="1" />
                                <TextField fx:id="b" alignment="CENTER" promptText="b" text="0" GridPane.columnIndex="1" />
                                <TextField fx:id="c" alignment="CENTER" promptText="c" text="0" GridPane.rowIndex="1" />
                                <TextField fx:id="d" alignment="CENTER" promptText="d" text="1" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                        <Label text="]">
                            <font>
                                <Font size="60.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <Separator prefWidth="200.0" />

                <Label text="Test Vector (Optional)">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text="See how a Vector moves:" textFill="#666666" wrapText="true">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="v =" textFill="#000983">
                            <font>
                                <Font name="System Bold Italic" size="18.0" />
                            </font>
                        </Label>
                        <GridPane vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <TextField fx:id="v1" alignment="CENTER" prefWidth="60.0" promptText="x" />
                                <TextField fx:id="v2" alignment="CENTER" prefWidth="60.0" promptText="y" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                    </children>
                </HBox>

                <Separator prefWidth="200.0" />

                <VBox spacing="10.0">
                    <children>
                        <Label fx:id="Eigen_value_num" text="Results will appear here" textFill="#000983" wrapText="true">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>

                        <VBox spacing="2.0">
                            <children>
                                <Label text="Eigenvalue 1:" textFill="#666666">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                                <Label fx:id="Eigen_Value_1" text="-">
                                    <font>
                                        <Font name="Monospaced Regular" size="12.0" />
                                    </font>
                                </Label>
                                <Label text="Eigenvector 1:" textFill="#666666">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                                <Label fx:id="EigenVector_print_1" text="-">
                                    <font>
                                        <Font name="Monospaced Regular" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <VBox spacing="2.0">
                            <children>
                                <Label text="Eigenvalue 2:" textFill="#666666">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                                <Label fx:id="Eigen_Value_2" text="-">
                                    <font>
                                        <Font name="Monospaced Regular" size="12.0" />
                                    </font>
                                </Label>
                                <Label text="Eigenvector 2:" textFill="#666666">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                                <Label fx:id="EigenVector_print_2" text="-">
                                    <font>
                                        <Font name="Monospaced Regular" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <Pane VBox.vgrow="ALWAYS" />

                <Button fx:id="Draw_button" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#manager" prefHeight="40.0" style="-fx-background-color: #000983; -fx-text-fill: white; -fx-cursor: hand;" text="Visualise Transformation">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </left>

    <center>
        <Pane fx:id="pane" style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" left="0.0" right="20.0" top="20.0" />
            </BorderPane.margin>
        </Pane>
    </center>

</BorderPane>